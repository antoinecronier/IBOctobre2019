<Page
    x:Class="UWPTP3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPTP3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UCRole="using:UWPTP3.Views.Roles"
    xmlns:UCUser="using:UWPTP3.Views.Users"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding MainPageInstance, Source={StaticResource Locator}}"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn1" Grid.Column="0" Command="{Binding Btn1Command}" Content="{Binding Btn1Text}"/>
        <Button x:Name="btn2" Grid.Column="1" Command="{Binding Btn2Command}" Content="{Binding Btn2Text}"/>
        <Button x:Name="btn3" Grid.Column="2" Command="{Binding Btn3Command}" Content="{Binding Btn3Text}"/>
    </Grid>
</Page>
