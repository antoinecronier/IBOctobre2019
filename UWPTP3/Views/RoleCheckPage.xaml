<Page
    x:Class="UWPTP3.Views.RoleCheckPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPTP3.Views"
    xmlns:roleUc="using:UWPTP3.Views.Roles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid x:Name="mainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <roleUc:ListRoleUC x:Name="roleList" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>
            <roleUc:EditRoleUC x:Name="roleEdit" Grid.Row="0" Grid.Column="1"/>
            <roleUc:ShowRoleUC x:Name="roleShow" Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </ScrollViewer>
</Page>
