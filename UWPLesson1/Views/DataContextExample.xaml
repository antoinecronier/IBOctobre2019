<Page
    x:Class="UWPLesson1.Views.DataContextExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPLesson1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBox x:Name="txtB1" Text="{Binding Firstname, Mode=TwoWay}"/>
        <TextBox x:Name="txtB2" Text="{Binding Lastname, Mode=TwoWay}"/>
        <TextBlock x:Name="txtB3" Text="{Binding FullName, Mode=OneWay}"/>
        <Button x:Name="btn1">PrintToConsole</Button>
        <Button x:Name="btn2">Reset</Button>
    </StackPanel>
</Page>
